#include <stdio.h>

int main()
{
    int a;
    int b;
    int c;

    printf("lutfen 1. sayiyi giriniz: ");
    scanf("%d", &a);
    printf("lutfen 2. sayiyi giriniz: ");
    scanf("%d", &b);
    printf("lutfen 3. sayiyi giriniz: ");
    scanf("%d", &c);


    if (a > b) {
        int t = a;
        a = b;
        b = t;
    }
    if (a > c) {
        int t = a;
        a = c;
        c = t;
    }
    if (b > c) {
        int t = b;
        b = c;
        c = t;
    }

    printf("siralamaniz: %d < %d < %d\n", a, b, c);

}
